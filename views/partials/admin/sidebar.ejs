<div class="sidebar fixed inset-y-0 flex w-64 flex-col" x-data="{ open: false }">
     <!-- Sidebar background -->
     <div class="flex min-h-0 flex-1 flex-col bg-gray-800">
          <div class="flex flex-1 flex-col overflow-y-auto pt-5 pb-4">
               <div class="flex flex-shrink-0 items-center px-4">
                    <img class="h-8 w-auto" src="/images/logo.png" alt="Morocco Tours">
                    <span class="ml-2 text-xl font-bold text-white">Admin Panel</span>
               </div>
               <nav class="mt-5 flex-1 space-y-1 px-2">
                    <!-- Dashboard -->
                    <a href="/admin/dashboard" class="<%= path === '/admin/dashboard' ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> group flex items-center px-2 py-2 text-sm font-medium rounded-md">
                         <svg class="mr-3 h-6 w-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                         </svg>
                         Dashboard
                    </a>

                    <!-- Tours Management -->
                    <a href="/admin/tours" class="<%= path.startsWith('/admin/tours') ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> group flex items-center px-2 py-2 text-sm font-medium rounded-md">
                         <svg class="mr-3 h-6 w-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                         </svg>
                         Tours
                    </a>

                    <!-- Bookings Management -->
                    <a href="/admin/bookings" class="<%= path.startsWith('/admin/bookings') ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> group flex items-center px-2 py-2 text-sm font-medium rounded-md">
                         <svg class="mr-3 h-6 w-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                         </svg>
                         Bookings
                    </a>

                    <!-- Analytics -->
                    <a href="/admin/analytics" class="<%= path === '/admin/analytics' ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> group flex items-center px-2 py-2 text-sm font-medium rounded-md">
                         <svg class="mr-3 h-6 w-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                         </svg>
                         Analytics
                    </a>

                    <!-- Settings -->
                    <a href="/admin/settings" class="<%= path === '/admin/settings' ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> group flex items-center px-2 py-2 text-sm font-medium rounded-md">
                         <svg class="mr-3 h-6 w-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                         </svg>
                         Settings
                    </a>
               </nav>
          </div>

          <!-- User Menu -->
          <div class="flex flex-shrink-0 bg-gray-700 p-4">
               <div class="group block w-full flex-shrink-0">
                    <div class="flex items-center">
                         <div>
                              <img class="inline-block h-9 w-9 rounded-full" src="https://i.pravatar.cc/300" alt="avatar ">
                         </div>
                         <div class="ml-3">
                              <p class="text-sm font-medium text-white">
                                   Hello
                              </p>
                              <a href="/auth/logout" class="text-xs font-medium text-gray-300 group-hover:text-gray-200">Logout</a>
                         </div>
                    </div>
               </div>
          </div>
     </div>
</div>