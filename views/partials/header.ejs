<!-- Language Switcher Script -->
<script>
     // Initialize Google Translate
     function googleTranslateElementInit() {
          new google.translate.TranslateElement({
               pageLanguage: 'en',
               includedLanguages: 'en,fr,es,it,ar,ja',
               layout: google.translate.TranslateElement.InlineLayout.SIMPLE,
               autoDisplay: false,
               multilanguagePage: true
          }, 'google_translate_element');

          // Add event listener to close modal when language is selected
          setTimeout(() => {
               const select = document.querySelector('.goog-te-combo');
               if (select) {
                    select.addEventListener('change', () => {
                         const modalElement = document.querySelector('[x-data]');
                         if (modalElement && modalElement.__x) {
                              modalElement.__x.$data.languageModal = false;
                         }
                    });
               }
          }, 1000);
     }
</script>

<!-- Load Google Translate script -->
<script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit" async></script>
