            <span class="font-medium"><%= locals.commonTranslations?.excursions || 'Excursions' %></span>
        </a>
        <a href="/blog" class="flex items-center px-6 py-3 text-[#1d1d1f] hover:bg-orange-50 transition-colors duration-200">
            <i class="fas fa-blog w-7 text-orange-500"></i>
            <span class="font-medium"><%= locals.commonTranslations?.blog || 'Blog' %></span>
        </a>
        <a href="/about" class="flex items-center px-6 py-3 text-[#1d1d1f] hover:bg-orange-50 transition-colors duration-200">
