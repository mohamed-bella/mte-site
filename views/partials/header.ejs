<!-- Initialize global sidebar state -->
<div x-data="{ globalSidebarOpen: false }" x-on:keydown.escape="globalSidebarOpen = false" id="sidebar-controller">

<!-- Apple-inspired Navigation -->
<header 
    x-data="{ 
        lastScrollTop: 0,
        showNavbar: true,
        scrollPosition: 0
    }" 
    @scroll.window="
        scrollPosition = window.pageYOffset;
        if(scrollPosition > lastScrollTop + 50) {
            showNavbar = false;
        } else if(scrollPosition < lastScrollTop - 10) {
            showNavbar = true;
        }
        lastScrollTop = scrollPosition <= 0 ? 0 : scrollPosition;
    "
    :class="{ 
        'transform -translate-y-full': !showNavbar && scrollPosition > 100,
        'backdrop-blur-md bg-white/90 shadow-sm': scrollPosition > 50,
        'bg-transparent': scrollPosition <= 50
    }"
    class="fixed top-0 left-0 w-full z-50 transition-all duration-500 ease-out">
    
    <div class="max-w-[1120px] mx-auto px-6">
        <div class="flex justify-between items-center h-16">
            <!-- Mobile: Hamburger and Logo -->
            <div class="flex items-center">
                <!-- Hamburger Toggle with Apple-style animation -->
                <button 
                    @click="$store.sidebar.open()" 
                    class="p-2 lg:hidden text-[#1d1d1f] hover:text-orange-500 transition-colors duration-300">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" viewBox="0 0 24 24">
                        <path d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
                
                <!-- Logo with subtle hover effect -->
                <a href="/" class="ml-2 lg:ml-0 transition-transform duration-300 hover:scale-105">
                    <img src="<%= settings?.logo?.url || '/images/logo.png' %>" alt="<%= settings?.siteTitle || 'Morocco Travel Experts' %>" class="h-10 w-auto object-contain">
                </a>
            </div>
            
            <!-- Desktop: Apple-style Navigation -->
            <nav class="hidden lg:flex items-center space-x-8">
                <a href="/" class="font-medium text-[#1d1d1f] hover:text-orange-500 transition-colors duration-300 relative group py-1">
                    <%= locals.commonTranslations?.home || 'Home' %>
                    <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-orange-500 transition-all duration-300 group-hover:w-full"></span>
                </a>
                <a href="/tours" class="font-medium text-[#1d1d1f] hover:text-orange-500 transition-colors duration-300 relative group py-1">
                    <%= locals.commonTranslations?.tours || 'Tours' %>
                    <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-orange-500 transition-all duration-300 group-hover:w-full"></span>
                </a>
                <a href="/excursions" class="font-medium text-[#1d1d1f] hover:text-orange-500 transition-colors duration-300 relative group py-1">
                    <%= locals.commonTranslations?.excursions || 'Excursions' %>
                    <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-orange-500 transition-all duration-300 group-hover:w-full"></span>
                </a>
                <a href="/blog" class="font-medium text-[#1d1d1f] hover:text-orange-500 transition-colors duration-300 relative group py-1">
                    <%= locals.commonTranslations?.blog || 'Blog' %>
                    <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-orange-500 transition-all duration-300 group-hover:w-full"></span>
                </a>
                <a href="/about" class="font-medium text-[#1d1d1f] hover:text-orange-500 transition-colors duration-300 relative group py-1">
                    <%= locals.commonTranslations?.about || 'About' %>
                    <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-orange-500 transition-all duration-300 group-hover:w-full"></span>
                </a>
                <a href="/contact" class="font-medium text-[#1d1d1f] hover:text-orange-500 transition-colors duration-300 relative group py-1">
                    <%= locals.commonTranslations?.contact || 'Contact' %>
                    <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-orange-500 transition-all duration-300 group-hover:w-full"></span>
                </a>
            </nav>
            
            <!-- Translation and Contact Button (visible on all screens) -->
            <div class="flex items-center space-x-5">
                <!-- Translation Widget -->
                <div class="gtranslate_wrapper"></div>
                
                <!-- Contact Button - Apple-style -->
                <a href="/contact" class="flex items-center justify-center h-10 w-10 bg-orange-500 hover:bg-orange-600 text-white rounded-full transition-all duration-300 hover:scale-105 shadow-sm">
                    <i class="fas fa-envelope text-sm"></i>
                </a>
                
                <% if (locals.user && locals.user.isAdmin) { %>
                <!-- Admin Link - Apple-style -->
                <a href="/admin/dashboard" class="hidden md:flex items-center px-4 py-1.5 bg-gray-100 hover:bg-gray-200 text-[#1d1d1f] rounded-full text-sm transition-all duration-300 hover:shadow-md">
                    <i class="fas fa-user-shield mr-2 text-orange-500"></i>
                    Admin
                </a>
                <% } %>
            </div>
        </div>
    </div>
    
    <!-- Apple-style divider that appears on scroll -->
    <div 
        x-show="scrollPosition > 50" 
        x-transition:enter="transition-opacity duration-300" 
        x-transition:enter-start="opacity-0" 
        x-transition:enter-end="opacity-100"
        class="h-px w-full bg-gray-200"></div>
</header>

