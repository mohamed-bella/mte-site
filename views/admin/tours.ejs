<%- include('../partials/admin/header') %>
     <%- include('../partials/admin/sidebar') %>

          <div class="md:pl-64 flex flex-col flex-1">
               <main class="flex-1">
                    <div class="py-6">
                         <!-- Page Header -->
                         <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
                              <div class="flex items-center justify-between">
                                   <h1 class="text-2xl font-semibold text-gray-900">Tours Management</h1>
                                   <div class="flex space-x-4">
                                        <a href="/admin/tours/new" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500">
                                             <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                             </svg>
                                             Add New Tour
                                        </a>
                                        <a href="/admin/tours/new-form" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                             <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                             </svg>
                                             Advanced Form
                                        </a>
                                   </div>
                              </div>
                         </div>

                         <!-- Tours List -->
                         <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
                              <div class="mt-8 flex flex-col">
                                   <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
                                        <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
                                             <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
                                                  <% if (tours && tours.length> 0) { %>
                                                       <table class="min-w-full divide-y divide-gray-300">
                                                            <thead class="bg-gray-50">
                                                                 <tr>
                                                                      <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">
                                                                           Title
                                                                      </th>
                                                                      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                                                                           Duration
                                                                      </th>
                                                                      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                                                                           Price
                                                                      </th>
                                                                      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                                                                           Group Size
                                                                      </th>
                                                                      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                                                                           Status
                                                                      </th>
                                                                      <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                                                                           <span class="sr-only">Actions</span>
                                                                      </th>
                                                                 </tr>
                                                            </thead>
                                                            <tbody class="divide-y divide-gray-200 bg-white">
                                                                 <% tours.forEach(tour=> { %>
                                                                      <tr>
                                                                           <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm sm:pl-6">
                                                                                <div class="flex items-center">
                                                                                     <div class="h-10 w-10 flex-shrink-0">
                                                                                          <img class="h-10 w-10 rounded-full object-cover" src="<%= tour.mainImage %>" alt="<%= tour.title %>">
                                                                                     </div>
                                                                                     <div class="ml-4">
                                                                                          <div class="font-medium text-gray-900">
                                                                                               <%= tour.title %>
                                                                                          </div>
                                                                                          <div class="text-gray-500">
                                                                                               <%= tour.startLocation %>
                                                                                          </div>
                                                                                     </div>
                                                                                </div>
                                                                           </td>
                                                                           <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                                                                                <%= tour.duration %> days
                                                                           </td>
                                                                           <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                                                                                $<%= tour.price.toLocaleString() %>
                                                                           </td>
                                                                           <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                                                                                <%= tour.groupSize %> people
                                                                           </td>
                                                                           <td class="whitespace-nowrap px-3 py-4 text-sm">
                                                                                <span class="inline-flex rounded-full px-2 text-xs font-semibold leading-5 <%= tour.featured ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                                                                                     <%= tour.featured ? 'Featured' : 'Standard' %>
                                                                                </span>
                                                                           </td>
                                                                           <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                                                                                <div class="flex justify-end space-x-2">
                                                                                     <!-- View Button -->
                                                                                     <a href="/tours/<%= tour.slug %>" target="_blank" class="text-blue-600 hover:text-blue-900">
                                                                                          View
                                                                                     </a>
                                                                                     <!-- Edit Button -->
                                                                                     <a href="/admin/tours/<%= tour._id %>/edit" class="text-orange-600 hover:text-orange-900">
                                                                                          Edit
                                                                                     </a>
                                                                                     <!-- Enhanced Edit Button -->
                                                                                     <a href="/admin/tours/<%= tour._id %>/edit-enhanced" class="text-indigo-600 hover:text-indigo-900">
                                                                                          Advanced
                                                                                     </a>
                                                                                     <!-- Delete Button -->
                                                                                     <form action="/admin/tours/<%= tour._id %>/delete" method="POST" class="inline" onsubmit="return confirm('Are you sure you want to delete this tour?');">
                                                                                          <button type="submit" class="text-red-600 hover:text-red-900">
                                                                                               Delete
                                                                                          </button>
                                                                                     </form>
                                                                                     <!-- Toggle Featured Status -->
                                                                                     <form action="/admin/tours/<%= tour._id %>/toggle-featured" method="POST" class="inline">
                                                                                          <button type="submit" class="text-gray-600 hover:text-gray-900">
                                                                                               <%= tour.featured ? 'Unfeature' : 'Feature' %>
                                                                                          </button>
                                                                                     </form>
                                                                                </div>
                                                                           </td>
                                                                      </tr>
                                                                      <% }); %>
                                                            </tbody>
                                                       </table>
                                                       <% } else { %>
                                                            <!-- Empty State -->
                                                            <div class="text-center py-12">
                                                                 <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                                                 </svg>
                                                                 <h3 class="mt-2 text-sm font-medium text-gray-900">No tours</h3>
                                                                 <p class="mt-1 text-sm text-gray-500">Get started by creating a new tour.</p>
                                                                 <div class="mt-6 flex justify-center space-x-4">
                                                                      <a href="/admin/tours/new" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500">
                                                                           <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                                                           </svg>
                                                                           Add New Tour
                                                                      </a>
                                                                      <a href="/admin/tours/new-form" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                                                           <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                                                           </svg>
                                                                           Advanced Form
                                                                      </a>
                                                                 </div>
                                                            </div>
                                                            <% } %>
                                             </div>
                                        </div>
                                   </div>
                              </div>
                         </div>
                    </div>
               </main>
          </div>

          <%- include('../partials/admin/footer') %>