<!-- Reviews Toggle Enhancement Script -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Check if Alpine.js is loaded
        if (window.Alpine) {
            // Add a custom event to refresh Alpine.js components after DOM updates
            window.addEventListener('reviews-filter-change', function() {
                Alpine.nextTick(() => {
                    document.querySelectorAll('[x-data]').forEach(el => {
                        if (el.__x) {
                            el.__x.updateElements(el);
                        }
                    });
                });
            });
            
            // Add event listeners to tab buttons
            document.querySelectorAll('[x-data*="activeTab"] button').forEach(button => {
                button.addEventListener('click', function() {
                    setTimeout(() => {
                        window.dispatchEvent(new CustomEvent('reviews-filter-change'));
                    }, 10);
                });
            });
        }
    });
</script>

