<!DOCTYPE html>
<html lang="en" class="scroll-smooth">

<%- include('../partials/head', { 
    title: 'Morocco Travel Experts - Authentic Moroccan Tours & Desert Adventures', 
    metaDescription: 'Experience the magic of Morocco with tailor-made tours, desert adventures, and authentic cultural experiences led by local experts. Book your dream Moroccan journey today!',
    metaKeywords: 'morocco tours, morocco travel agency, sahara desert tours, morocco private tours, marrakech tours, morocco travel experts, authentic moroccan experiences'
}) %>

<%- include('../partials/header') %>

<main class="min-h-screen">
    <!-- Hero Section - Modern & Mobile-Friendly -->
    <section class="relative min-h-screen flex items-center justify-center bg-white">
        <!-- Hero Content Container -->
        <div class="relative z-10 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 text-center">
            <!-- Main Content -->
            <div class="space-y-8">
                <!-- Badge -->
                <div class="inline-flex items-center rounded-full bg-orange-100 px-3 py-1 text-sm font-medium text-orange-800 mx-auto">
                    <i class="fas fa-map-marked-alt mr-2"></i>
                    Authentic Moroccan Experiences
                </div>
                
                <!-- Main Headline -->
                <h1 class="text-5xl md:text-7xl lg:text-8xl font-extrabold text-gray-900 leading-tight font-['Montserrat'] tracking-tight">
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-orange-500 to-orange-600">Morocco Travel</span> 
                    <br class="md:hidden">
                    <span class="relative inline-block">
                        Experts
                        <span class="absolute -bottom-1 md:-bottom-2 left-0 w-full h-1 md:h-2 bg-orange-500 rounded-full opacity-70"></span>
                    </span>
                </h1>
                
                <!-- Subheading -->
                <p class="text-xl md:text-2xl text-gray-600 max-w-3xl mx-auto font-['Poppins'] font-light">
                    Experience the magic of Morocco with our expert local guides and customized tours
                </p>
                
                <!-- Separator -->
                <div class="flex justify-center">
                    <div class="w-24 h-1 bg-orange-500 rounded-full"></div>
                </div>
                
                <!-- CTA Buttons -->
                <div class="flex flex-col sm:flex-row gap-6 justify-center pt-8">
                    <a href="/tours" class="inline-flex items-center justify-center px-10 py-4 rounded-md bg-orange-500 text-white text-lg font-medium hover:bg-orange-600 transition-all duration-300 shadow-md min-w-[180px]">
                        <span>Tours</span>
                    </a>
                    <a href="/excursions" class="inline-flex items-center justify-center px-10 py-4 rounded-md bg-gray-100 text-gray-800 text-lg font-medium hover:bg-gray-200 transition-all duration-300 shadow-md min-w-[180px]">
                        <span>Excursions</span>
                    </a>
                </div>

                <!-- Trust Badges -->
                <div class="flex flex-wrap justify-center gap-5 pt-10">
                    <div class="flex items-center bg-gray-100 rounded-full px-4 py-2">
                        <i class="fas fa-check-circle text-orange-500 mr-2"></i>
                        <span class="text-gray-700">100% Local Guides</span>
                    </div>
                    <div class="flex items-center bg-gray-100 rounded-full px-4 py-2">
                        <i class="fas fa-shield-alt text-orange-500 mr-2"></i>
                        <span class="text-gray-700">Secure Booking</span>
                    </div>
                    <div class="flex items-center bg-gray-100 rounded-full px-4 py-2">
                        <i class="fas fa-star text-orange-500 mr-2"></i>
                        <span class="text-gray-700">5-Star Experience</span>
                    </div>
                </div>
            </div>
        </div>   
    </section>
    
    <!-- Separator -->
    <div class="w-full h-px bg-gray-200"></div>
    
    <!-- Popular Tours Section -->
    <section id="popular-tours" class="py-20 bg-orange-50 overflow-hidden">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <span class="inline-block px-3 py-1 bg-orange-100 text-orange-800 rounded-full text-sm font-medium mb-4">Popular Tours</span>
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">Discover Morocco's Magic</h2>
                <p class="text-lg text-gray-600 max-w-3xl mx-auto">
                    Explore our most popular tours, each crafted to showcase the best of Morocco's diverse landscapes, rich culture, and warm hospitality.
                </p>
            </div>
            
            <!-- Starting Cities Filter Tags -->
            <div class="flex flex-wrap justify-center gap-2 mb-12">
                <a href="/tours" class="inline-flex items-center px-4 py-2 rounded-full bg-orange-500 text-white font-medium text-sm hover:bg-orange-600 transition-colors">
                    <i class="fas fa-globe-africa mr-2"></i>All Cities
                </a>
                <a href="/tours?city=Marrakech" class="inline-flex items-center px-4 py-2 rounded-full bg-gray-100 text-gray-800 font-medium text-sm hover:bg-gray-200 transition-colors">
                    <i class="fas fa-map-marker-alt mr-2 text-orange-500"></i>Marrakech
                    <span class="inline-flex items-center justify-center ml-2 w-5 h-5 text-xs bg-gray-200 rounded-full"><%= tours.filter(tour => tour.startLocation === 'Marrakech').length || '0' %></span>
                </a>
                <a href="/tours?city=Casablanca" class="inline-flex items-center px-4 py-2 rounded-full bg-gray-100 text-gray-800 font-medium text-sm hover:bg-gray-200 transition-colors">
                    <i class="fas fa-map-marker-alt mr-2 text-orange-500"></i>Casablanca
                    <span class="inline-flex items-center justify-center ml-2 w-5 h-5 text-xs bg-gray-200 rounded-full"><%= tours.filter(tour => tour.startLocation === 'Casablanca').length || '0' %></span>
                </a>
                <a href="/tours?city=Fes" class="inline-flex items-center px-4 py-2 rounded-full bg-gray-100 text-gray-800 font-medium text-sm hover:bg-gray-200 transition-colors">
                    <i class="fas fa-map-marker-alt mr-2 text-orange-500"></i>Fes
                    <span class="inline-flex items-center justify-center ml-2 w-5 h-5 text-xs bg-gray-200 rounded-full"><%= tours.filter(tour => tour.startLocation === 'Fes').length || '0' %></span>
                </a>
                <a href="/tours?city=Tangier" class="inline-flex items-center px-4 py-2 rounded-full bg-gray-100 text-gray-800 font-medium text-sm hover:bg-gray-200 transition-colors">
                    <i class="fas fa-map-marker-alt mr-2 text-orange-500"></i>Tangier
                    <span class="inline-flex items-center justify-center ml-2 w-5 h-5 text-xs bg-gray-200 rounded-full"><%= tours.filter(tour => tour.startLocation === 'Tangier').length || '0' %></span>
                </a>
                <a href="/tours?city=Chefchaouen" class="inline-flex items-center px-4 py-2 rounded-full bg-gray-100 text-gray-800 font-medium text-sm hover:bg-gray-200 transition-colors">
                    <i class="fas fa-map-marker-alt mr-2 text-orange-500"></i>Chefchaouen
                    <span class="inline-flex items-center justify-center ml-2 w-5 h-5 text-xs bg-gray-200 rounded-full"><%= tours.filter(tour => tour.startLocation === 'Chefchaouen').length || '0' %></span>
                </a>
            </div>
            
            <!-- Desktop Tours Grid with fixed width -->
            <div class="hidden md:grid grid-cols-1 md:grid-cols-3 gap-6">
                <% tours.forEach((tour, index) => { %>
                    <a href="/tours/<%= tour.slug %>" class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 flex flex-col h-full group" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
                        <div class="relative h-64">
                            <img 
                                src="<%= tour.mainImage %>" 
                                alt="<%= tour.title %> - Morocco Tour" 
                                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                                loading="lazy"
                            >
                            <div class="absolute top-4 right-4 flex gap-2">
                                <span class="px-3 py-1 bg-white rounded-full text-sm font-semibold text-gray-900 shadow-md flex items-center">
                                    <i class="far fa-clock text-orange-500 mr-1"></i>
                                    <%= tour.duration %> Days
                                </span>
                            </div>
                            <% if (tour.featured) { %>
                                <div class="absolute top-4 left-4">
                                    <span class="px-3 py-1 bg-orange-500 text-white rounded-full text-sm font-semibold shadow-md">
                                        Featured
                                    </span>
                                </div>
                            <% } %>
                        </div>
                        
                        <div class="p-5">
                            <div class="flex items-center mb-2 text-gray-500">
                                <i class="fas fa-map-marker-alt text-orange-500 mr-2"></i>
                                <span class="text-sm"><%= tour.startLocation %></span>
                            </div>
                            
                            <h3 class="text-xl font-bold text-gray-900 group-hover:text-orange-600 transition-colors">
                                <%= tour.title %>
                            </h3>
                            
                            <div class="mt-4 flex justify-end">
                                <span class="inline-flex items-center text-orange-600 font-medium group-hover:translate-x-1 transition-transform duration-300">
                                    View Details
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                    </svg>
                                </span>
                            </div>
                        </div>
                    </a>
                <% }); %>
            </div>
            
            <!-- Mobile Tours Carousel with fixed sizing -->
            <div class="md:hidden">
                <div class="swiper-container tourmobile-swiper overflow-visible">
                    <div class="swiper-wrapper pb-12">
                        <% tours.forEach(tour => { %>
                            <div class="swiper-slide px-1">
                                <a href="/tours/<%= tour.slug %>" class="block bg-white rounded-lg shadow-md overflow-hidden h-full flex flex-col group">
                                    <div class="relative h-48">
                                        <img 
                                            src="<%= tour.mainImage %>" 
                                            alt="<%= tour.title %> - Morocco Tour" 
                                            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                                            loading="lazy"
                                        >
                                        <div class="absolute top-3 right-3">
                                            <span class="px-2 py-1 bg-white/90 rounded-full text-xs font-semibold text-gray-900 shadow-sm">
                                                <i class="far fa-clock text-orange-500 mr-1"></i>
                                                <%= tour.duration %> Days
                                            </span>
                                        </div>
                                    </div>
                                    
                                    <div class="p-4">
                                        <div class="flex items-center mb-2 text-gray-500">
                                            <i class="fas fa-map-marker-alt text-orange-500 mr-1.5"></i>
                                            <span class="text-xs"><%= tour.startLocation %></span>
                                        </div>
                                        
                                        <h3 class="text-base font-bold text-gray-900 group-hover:text-orange-600 transition-colors">
                                            <%= tour.title %>
                                        </h3>
                                        
                                        <div class="mt-3 flex justify-end">
                                            <span class="inline-flex items-center text-orange-600 text-sm font-medium">
                                                View Details
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                                </svg>
                                            </span>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        <% }); %>
                    </div>
                    <div class="swiper-pagination"></div>
                </div>
            </div>
            
            <div class="text-center mt-12">
                <a href="/tours" class="inline-flex items-center justify-center px-8 py-4 text-base font-medium text-white bg-orange-600 rounded-full shadow-lg hover:bg-orange-700 transform hover:-translate-y-1 transition-all duration-300">
                    View All Tours
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                    </svg>
                </a>
            </div>
        </div>
    </section>
    
    <!-- Starting Cities Section -->
