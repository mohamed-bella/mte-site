<!DOCTYPE html>
<html lang="en" class="scroll-smooth">

<%- include('../partials/head', { title: 'Discover Morocco - Your Desert Adventure Awaits' }) %>

<%- include('../partials/header') %>

<main class="min-h-screen">
    <!-- Hero Section -->
    <section class="relative min-h-[85vh] flex items-center justify-center overflow-hidden bg-gray-900">
        <!-- Background Image with Gradient Overlay -->
        <div class="absolute inset-0">
            <img 
                src="https://raw.githubusercontent.com/mohamed-bella/mte-files/refs/heads/main/IMG-20250204-WA0004.webp" 
                alt="Morocco Desert Landscape" 
                class="w-full h-full object-cover opacity-60"
                loading="eager"
            />
            <div class="absolute inset-0 bg-gradient-to-b from-gray-900/90 via-gray-900/70 to-gray-900/90"></div>
        </div>

        <!-- Content Container -->
        <div class="relative w-full max-w-[85rem] mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-20">
            <div class="max-w-3xl mx-auto text-center" data-aos="fade-up" data-aos-delay="100">
                <!-- Main Heading -->
                <h1 class="font-serif text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 tracking-tight leading-tight">
                    Discover the Magic of 
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-orange-600">
                        Morocco
                    </span>
                </h1>

                <!-- Value Proposition -->
                <p class="text-lg sm:text-xl md:text-2xl text-gray-200 mb-8 max-w-2xl mx-auto leading-relaxed">
                    Expert-guided tours across Morocco's most breathtaking destinations, from ancient medinas to endless Sahara dunes.
                </p>

                <!-- Key Features -->
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-10 max-w-3xl mx-auto">
                    <div class="p-4 rounded-lg bg-white/10 backdrop-blur-sm">
                        <i class="fas fa-map-marked-alt text-orange-500 text-2xl mb-2"></i>
                        <p class="text-white text-sm">Customized Tours</p>
                    </div>
                    <div class="p-4 rounded-lg bg-white/10 backdrop-blur-sm">
                        <i class="fas fa-users text-orange-500 text-2xl mb-2"></i>
                        <p class="text-white text-sm">Expert Guides</p>
                    </div>
                    <div class="p-4 rounded-lg bg-white/10 backdrop-blur-sm">
                        <i class="fas fa-hotel text-orange-500 text-2xl mb-2"></i>
                        <p class="text-white text-sm">Luxury Stays</p>
                    </div>
                    <div class="p-4 rounded-lg bg-white/10 backdrop-blur-sm">
                        <i class="fas fa-shield-alt text-orange-500 text-2xl mb-2"></i>
                        <p class="text-white text-sm">Safe Travel</p>
                    </div>
                </div>

                <!-- CTA Buttons -->
                <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
                    <a href="/tours" class="w-full sm:w-auto inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-white bg-orange-600 rounded-full shadow-lg hover:bg-orange-700 transform hover:-translate-y-1 transition-all duration-300">
                        View Our Tours
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                        </svg>
                    </a>
                    <a href="/contact" class="w-full sm:w-auto inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-white border-2 border-white/30 rounded-full hover:bg-white/10 backdrop-blur-sm transform hover:-translate-y-1 transition-all duration-300">
                        Contact Us
                        <i class="fas fa-envelope ml-2"></i>
                    </a>
                </div>

                <!-- Trust Indicators -->
                <div class="mt-12 flex items-center justify-center space-x-6 text-white/80">
                    <div class="flex items-center">
                        <i class="fas fa-star text-yellow-400 mr-2"></i>
                        <span class="text-sm">5.0 Rating</span>
                    </div>
                    <div class="hidden sm:flex items-center">
                        <span class="block w-1 h-1 rounded-full bg-white/30"></span>
                    </div>
                    <div class="flex items-center">
                        <i class="fas fa-users text-orange-400 mr-2"></i>
                        <span class="text-sm">1000+ Happy Travelers</span>
                    </div>
                    <div class="hidden sm:flex items-center">
                        <span class="block w-1 h-1 rounded-full bg-white/30"></span>
                    </div>
                    <div class="flex items-center">
                        <i class="fas fa-check-circle text-green-400 mr-2"></i>
                        <span class="text-sm">Licensed Agency</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Decorative Elements -->
        <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-gray-50 to-transparent"></div>
    </section>

    <!-- Reviews Section -->
    <section class="py-20 bg-white">
        <div class="max-w-6xl mx-auto px-4 sm:px-6">
            <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between mb-12">
                <div>
                    <h2 class="text-2xl font-semibold text-gray-900">Customer Reviews</h2>
                    <div class="flex items-center mt-2">
                        <div class="flex text-yellow-400">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        </div>
                        <span class="ml-2 text-gray-600 text-sm">5.0 ·  reviews on Google</span>
                    </div>
                </div>
                <a href="https://www.google.com/maps/place/Morocco+Travel+Experts/@31.8008346,-7.1506879,6z/data=!4m8!3m7!1s0x8e986267ddccc027:0xbdf3189be2ce9d30!8m2!3d31.8008346!4d-7.1506879!9m1!1b1!16s%2Fg%2F11yc4ftzk9?hl=en-GB&entry=ttu" 
                   class="flex items-center text-sm text-gray-600 hover:text-gray-900 transition-colors mt-4 sm:mt-0"
                   target="_blank"
                   rel="noopener">
                    <img src="https://www.google.com/favicon.ico" alt="Google" class="w-4 h-4 mr-1">
                    <span class="whitespace-nowrap">View all reviews on Google</span>
                    <svg class="w-4 h-4 ml-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                </a>
            </div>

            <div class="grid md:grid-cols-3 gap-6">
                <div class="bg-gray-50 p-6 rounded-lg">
                    <div class="flex items-center mb-4">
                        <img src="https://lh3.googleusercontent.com/a-/ALV-UjWXPIC1NttQ9s_o5Svb2Kudoevirm_UpQvK4iianms8Iy3gp8PQsg=w32-h32-p-rp-mo-br100" 
                             alt="Martin E. Coleman" 
                             class="w-10 h-10 rounded-full">
                        <div class="ml-3">
                            <h4 class="text-sm font-medium text-gray-900">Martin E. Coleman</h4>
                            <div class="flex text-yellow-400 text-xs mt-1">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>
                        </div>
                    </div>
                    <p class="text-sm text-gray-600">Hamid is an outstanding guide and driver! He is conscientious and courteous and went above and beyond to make sure we had a great trip...</p>
                    <span class="block mt-4 text-xs text-gray-500">Posted on Google · Feb 23, 2025</span>
                </div>

                <div class="bg-gray-50 p-6 rounded-lg">
                    <div class="flex items-center mb-4">
                        <img src="https://lh3.googleusercontent.com/a-/ALV-UjUFp2yXpGRNjrClmk1thasuxxqTRNk5XO6rNRysGHx7YXwhEww=w32-h32-p-rp-mo-br100" 
                             alt="Harold Schroeder" 
                             class="w-10 h-10 rounded-full">
                        <div class="ml-3">
                            <h4 class="text-sm font-medium text-gray-900">Harold Schroeder</h4>
                            <div class="flex text-yellow-400 text-xs mt-1">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>
                        </div>
                    </div>
                    <p class="text-sm text-gray-600">We were very happy with our driver/tour guide. He was friendly and helpful without being intrusive. Made our trip truly memorable.</p>
                    <span class="block mt-4 text-xs text-gray-500">Posted on Google · Feb 23, 2025</span>
                </div>

                <div class="bg-gray-50 p-6 rounded-lg">
                    <div class="flex items-center mb-4">
                        <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=Iwona" 
                             alt="Iwona Wiśniewska" 
                             class="w-10 h-10 rounded-full">
                        <div class="ml-3">
                            <h4 class="text-sm font-medium text-gray-900">Iwona Wiśniewska</h4>
                            <div class="flex text-yellow-400 text-xs mt-1">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>
                        </div>
                    </div>
                    <p class="text-sm text-gray-600">I recently had the pleasure of exploring Morocco with Hamid as our tour guide. His ability to tell stories brought each location to life...</p>
                    <span class="block mt-4 text-xs text-gray-500">Posted on Google · Feb 17, 2025</span>
                </div>
            </div>
        </div>
    </section>

    <hr class="border-gray-200 my-8">

    <!-- Starting Cities Section -->
    <section class="py-16 bg-gray-50">
        <div class="container mx-auto px-4">
            <div class="mb-16">
                <h2 class="font-serif text-3xl md:text-4xl lg:text-5xl font-bold mb-4">Start Your Moroccan Story</h2>
                <div class="w-24 h-1 bg-orange-500 mb-4"></div>
                <p class="text-gray-600 text-base md:text-lg lg:text-xl">Pick your perfect starting point and let Morocco's magic unfold</p>
            </div>

            <div class="hidden sm:grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
                <% startingCities.forEach(location => { %>
                    <a href="/tours?city=<%= location.city %>" class="group">
                        <div class="relative h-[400px] rounded-xl overflow-hidden shadow-lg transition duration-300 hover:-translate-y-2">
                            <img src="<%= location.image %>" alt="Tours from <%= location.city %>" class="w-full h-full object-cover transform group-hover:scale-110 transition duration-700">
                            <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/50 to-transparent">
                                <div class="absolute bottom-0 p-6">
                                    <div class="mb-4">
                                        <div class="flex items-center space-x-2 mb-3">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                                            </svg>
                                            <span class="text-orange-400 text-sm md:text-base font-medium">Starting Point</span>
                                        </div>
                                        <h3 class="text-xl md:text-2xl font-bold text-white mb-2"><%= location.city %></h3>
                                        <p class="text-gray-300 text-sm md:text-base flex items-center">
                                            <%= location.tours.length %> Adventures Available
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                <% }); %>
            </div>

            <!-- Mobile Slider -->
            <div class="sm:hidden">
                <div class="overflow-x-auto hide-scrollbar">
                    <div class="flex space-x-4">
                        <% startingCities.forEach(location => { %>
                            <div class="flex-none w-[85vw]">
                                <div class="relative h-[300px] rounded-xl overflow-hidden shadow-lg">
                                    <img src="<%= location.image %>" alt="Tours from <%= location.city %>" class="w-full h-full object-cover">
                                    <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/50 to-transparent flex flex-col justify-end p-4">
                                        <div class="flex items-center space-x-2 mb-2">
                                            <div class="flex items-center justify-center w-8 h-8 rounded-full bg-orange-500/20 backdrop-blur-sm">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                                                </svg>
                                            </div>
                                            <span class="text-orange-400 text-sm font-medium">Starting Point</span>
                                        </div>
                                        
                                        <h3 class="text-2xl font-bold text-white mb-1"><%= location.city %></h3>
                                        
                                        <div class="flex items-center justify-between">
                                            <p class="text-gray-300 text-sm flex items-center">
                                                <span class="inline-block w-2 h-2 rounded-full bg-orange-500 mr-2"></span>
                                                <%= location.tours.length %> Tours Available
                                            </p>
                                            <a href="/tours?city=<%= location.city %>" class="text-white text-sm bg-white/20 backdrop-blur-sm px-3 py-1 rounded-full">
                                                View Tours →
                                            </a>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <hr class="border-gray-200 my-8">

    <!-- Tours Section -->
    <section id="tours" class="py-20 bg-gradient-to-b from-gray-100 to-white">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center" data-aos="fade-up">
                <span class="text-orange-600 font-medium text-sm tracking-wider uppercase mb-2 block">Curated Experiences</span>
                <h2 class="font-serif text-3xl md:text-4xl lg:text-5xl font-bold mb-4">Discover Our Signature Tours</h2>
                <div class="w-24 h-1 bg-orange-500 mx-auto mb-4"></div>
                <p class="text-gray-600 text-base md:text-lg lg:text-xl max-w-2xl mx-auto">Embark on carefully crafted journeys through Morocco's most enchanting destinations</p>
            </div>

            <!-- Desktop Grid -->
            <div class="hidden sm:grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
                <% tours.forEach(tour => { %>
                    <a href="/tours/<%= tour.slug %>" class="group">
                        <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-1">
                            <div class="relative">
                                <img src="<%= tour.mainImage %>" alt="<%= tour.title %>" class="w-full h-56 lg:h-64 object-cover transform group-hover:scale-105 transition duration-700">
                                <div class="absolute top-4 right-4">
                                    <span class="px-4 py-2 bg-white/95 backdrop-blur-sm rounded-full text-sm font-semibold text-gray-900 shadow-md">
                                        <%= tour.duration %> Days
                                    </span>
                                </div>
                                <div class="absolute inset-x-0 bottom-0 h-1/2 bg-gradient-to-t from-black/80 to-transparent"></div>
                            </div>

                            <div class="p-6">
                                <div class="flex items-center mb-3 text-orange-500">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    </svg>
                                    <span class="ml-2 text-sm font-medium"><%= tour.startLocation %></span>
                                </div>

                                <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-orange-600 transition-colors">
                                    <%= tour.title %>
                                </h3>

                                <p class="text-gray-600 mb-6 line-clamp-2 text-sm leading-relaxed">
                                    <%= tour.description.substring(0, 150) %>...
                                </p>

                                <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                                    <div class="flex flex-col">
                                        <span class="text-xs text-gray-500 font-medium">Starting from</span>
                                        <span class="text-2xl font-bold text-orange-600">$<%= tour.price %></span>
                                    </div>
                                    <span class="inline-flex items-center text-sm font-semibold text-orange-600 group-hover:text-orange-700">
                                        Explore Tour
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2 transform group-hover:translate-x-2 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                                        </svg>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </a>
                <% }); %>
            </div>

            <!-- Mobile Swiper -->
            <div class="sm:hidden">
                <div class="swiper toursSwiper">
                    <div class="swiper-wrapper pb-12">
                        <% tours.forEach(tour => { %>
                            <div class="swiper-slide px-2">
                                <a href="/tours/<%= tour.slug %>" class="block">
                                    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                                        <div class="relative">
                                            <img src="<%= tour.mainImage %>" alt="<%= tour.title %>" class="w-full h-56 object-cover">
                                            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent">
                                                <div class="absolute top-4 right-4">
                                                    <span class="px-3 py-1.5 bg-white/95 backdrop-blur-sm rounded-full text-sm font-semibold text-gray-900 shadow-md">
                                                        <%= tour.duration %> Days
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="p-5">
                                            <div class="flex items-center mb-2 text-orange-500">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                                </svg>
                                                <span class="ml-1.5 text-sm font-medium"><%= tour.startLocation %></span>
                                            </div>
                                            
                                            <h3 class="text-lg font-bold text-gray-900 mb-2"><%= tour.title %></h3>
                                            
                                            <p class="text-sm text-gray-600 mb-4 line-clamp-2 leading-relaxed">
                                                <%= tour.description.substring(0, 100) %>...
                                            </p>
                                            
                                            <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                                                <div class="flex flex-col">
                                                    <span class="text-xs text-gray-500 font-medium">From</span>
                                                    <span class="text-xl font-bold text-orange-600">$<%= tour.price %></span>
                                                </div>
                                                <button class="flex items-center px-4 py-2 bg-orange-600 text-white rounded-full text-sm font-medium transition-colors hover:bg-orange-700">
                                                    View Details
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                                    </svg>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        <% }); %>
                    </div>
                    <div class="swiper-pagination"></div>
                </div>
            </div>

            <div class="flex justify-center mt-12">
                <a href="/tours" class="inline-flex items-center px-8 py-4 text-base font-medium text-white bg-orange-600 rounded-full shadow-lg hover:bg-orange-700 transform hover:-translate-y-0.5 transition-all duration-300">
                    Explore All Tours
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                    </svg>
                </a>
            </div>
        </div>

        <!-- Initialize Swiper -->
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const toursSwiper = new Swiper('.toursSwiper', {
                    slidesPerView: 1.1,
                    spaceBetween: 16,
                    centeredSlides: true,
                    loop: true,
                    pagination: {
                        el: '.swiper-pagination',
                        clickable: true,
                        dynamicBullets: true,
                    },
                    autoplay: {
                        delay: 3500,
                        disableOnInteraction: false,
                    },
                    effect: 'coverflow',
                    coverflowEffect: {
                        rotate: 0,
                        stretch: 0,
                        depth: 100,
                        modifier: 1,
                        slideShadows: false,
                    },
                });
            });
        </script>
    </section>
</main>

<%- include('../partials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init({
        duration: 800,
        once: true,
        offset: 100
    });
</script>

<!-- Add this to the head section for line-clamp support -->
<style>
    @layer utilities {
        .line-clamp-4 {
            display: -webkit-box;
            -webkit-line-clamp: 4;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    }
</style>
</body>
</html>
