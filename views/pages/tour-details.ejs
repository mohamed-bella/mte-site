<!DOCTYPE html>
<html lang="en" class="scroll-smooth">

<head>
     <%- include('../partials/head', { 
          title: `${tour.title} | Morocco Travel Experts - Desert Tours & Adventures`,
          description: `Experience ${tour.title} with Morocco Travel Experts. ${tour.duration} days tour from ${tour.startLocation}. Professional guides, authentic experiences. Book now from $${tour.price}!`,
          canonicalUrl: `https://moroccotravelexperts.com/tours/${tour.slug}`,
          ogImage: tour.mainImage
     }) %>
     
     <!-- Schema.org markup for Tour -->
     <script type="application/ld+json">
     {
          "@context": "https://schema.org",
          "@type": "TouristTrip",
          "name": "<%= tour.title %>",
          "description": "<%= tour.description %>",
          "image": "<%= tour.mainImage %>",
          "url": "https://moroccotravelexperts.com/tours/<%= tour.slug %>",
          "touristType": ["Adventure Travel", "Cultural Tourism", "Desert Tours"],
          "provider": {
               "@type": "TravelAgency",
               "name": "Morocco Travel Experts",
               "url": "https://moroccotravelexperts.com"
          },
          "offers": {
               "@type": "Offer",
               "price": "<%= tour.price %>",
               "priceCurrency": "USD"
          },
          "duration": "P<%= tour.duration %>D",
          "maximumAttendeeCapacity": <%= tour.groupSize %>,
          "startingLocation": {
               "@type": "Place",
               "name": "<%= tour.startLocation %>"
          },
          "aggregateRating": {
               "@type": "AggregateRating",
               "ratingValue": "<%= tour.rating %>",
               "reviewCount": "<%= tour.reviewsCount %>"
          }
     }
     </script>
</head>

<body class="bg-gray-50">
     <%- include('../partials/header') %>

          <!-- Hero Section -->
          <section class="relative min-h-[60vh] flex items-center justify-center">
               <!-- Background Image -->
               <div class="absolute inset-0">
                    <img src="<%= tour.mainImage %>" alt="<%= tour.title %> - Morocco Travel Tour" class="w-full h-full object-cover">
                    <div class="absolute inset-0 bg-black/50"></div>
               </div>

               <!-- Content -->
               <div class="relative container mx-auto px-4 py-20 text-center text-white">
                    <h1 class="text-4xl md:text-6xl font-bold mb-6" data-aos="fade-up">
                         <%= tour.title %>
                    </h1>
                    <div class="max-w-3xl mx-auto mb-8">
                         <p class="text-lg md:text-xl text-gray-200" data-aos="fade-up" data-aos-delay="100">
                              <%= tour.description %>
                         </p>
                    </div>
                    <!-- Tour Quick Info -->
                    <div class="flex flex-wrap justify-center gap-8 text-white/90" data-aos="fade-up" data-aos-delay="200">
                         <div class="flex items-center">
                              <i class="fas fa-clock text-orange-500 mr-2" aria-hidden="true"></i>
                              <span>
                                   <%= tour.duration %> Days
                              </span>
                         </div>
                         <div class="flex items-center">
                              <i class="fas fa-users text-orange-500 mr-2" aria-hidden="true"></i>
                              <span>Max <%= tour.groupSize %> People</span>
                         </div>
                         <div class="flex items-center">
                              <i class="fas fa-map-marker-alt text-orange-500 mr-2" aria-hidden="true"></i>
                              <span>
                                   <%= tour.startLocation %>
                              </span>
                         </div>
                         <div class="flex items-center">
                              <i class="fas fa-star text-orange-500 mr-2" aria-hidden="true"></i>
                              <span>
                                   <%= tour.rating %> Rating (<%= tour.reviewsCount %> reviews)
                              </span>
                         </div>
                    </div>
               </div>

               <!-- Scroll Indicator -->
               <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-label="Scroll down">
                         <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
                    </svg>
               </div>
          </section>

          <!-- Photo Gallery -->
          <section class="py-20 bg-white">
               <div class="container mx-auto px-4">
                    <h2 class="text-3xl font-bold text-center mb-12" data-aos="fade-up">Tour Gallery</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" data-aos="fade-up">
                         <% tour.images.forEach((image, index)=> { %>
                              <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-xl transition duration-300">
                                   <img src="<%= image %>" alt="<%= tour.title %> - Tour Location <%= index + 1 %>" class="w-full h-80 object-cover transform group-hover:scale-105 transition duration-500">
                                   <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-all">
                                        <div class="absolute bottom-4 left-4 right-4">
                                             <button class="text-white bg-orange-500/90 hover:bg-orange-600 w-full py-2 rounded-lg backdrop-blur-sm transition" aria-label="View full size photo">
                                                  <i class="fas fa-expand-alt mr-2" aria-hidden="true"></i> View Photo
                                             </button>
                                        </div>
                                   </div>
                              </div>
                              <% }) %>
                    </div>
               </div>
          </section>

          <!-- Itinerary -->
          <section class="py-20 bg-gray-50">
               <div class="container mx-auto px-4">
                    <h2 class="text-3xl font-bold text-center mb-12" data-aos="fade-up">Your Journey</h2>
                    <div class="max-w-4xl mx-auto space-y-8">
                         <% tour.itinerary.forEach((day, index)=> { %>
                              <div class="relative pl-12 border-l-2 border-orange-500/20" data-aos="fade-up">
                                   <div class="absolute w-6 h-6 bg-orange-500 rounded-full -left-[13px] top-0 flex items-center justify-center">
                                        <span class="text-white text-sm font-bold">
                                             <%= index + 1 %>
                                        </span>
                                   </div>
                                   <div class="bg-white p-8 rounded-xl shadow-sm hover:shadow-md transition-shadow">
                                        <div class="flex items-center gap-3 mb-4">
                                             <span class="text-orange-500 font-bold">Day <%= day.day %></span>
                                             <div class="h-px bg-gray-200 flex-1"></div>
                                             <span class="text-gray-500">
                                                  <%= day.distance || '0 km' %>
                                             </span>
                                        </div>
                                        <h3 class="text-xl font-semibold text-gray-800 mb-3">
                                             <%= day.title %>
                                        </h3>
                                        <p class="text-gray-600 leading-relaxed">
                                             <%= day.description %>
                                        </p>
                                        <% if (day.highlights && day.highlights.length > 0) { %>
                                             <div class="mt-4 flex flex-wrap gap-2">
                                                  <% day.highlights.forEach(highlight=> { %>
                                                       <span class="px-3 py-1 bg-orange-50 text-orange-600 rounded-full text-sm">
                                                            <%= highlight %>
                                                       </span>
                                                       <% }) %>
                                             </div>
                                             <% } %>
                                   </div>
                              </div>
                              <% }) %>
                    </div>
               </div>
          </section>


          <section id="booking-section" class="py-20 bg-white">
               <div class="container mx-auto px-4 max-w-6xl">
                    <div class="grid md:grid-cols-2 gap-12">
                         <!-- Price Details - Fixed on Desktop -->
                         <div class="hidden lg:block sticky top-24 h-fit" data-aos="fade-right">
                              <div class="bg-orange-50 rounded-2xl p-8">
                                   <h3 class="text-2xl font-bold mb-6">Tour Price & Details</h3>
                                   <div class="space-y-4">
                                        <div class="flex justify-between items-center pb-4 border-b border-orange-200">
                                             <span class="text-gray-600">Price per person</span>
                                             <span class="text-2xl font-bold text-orange-600">$<%= tour.price %></span>
                                        </div>
                                        <div class="flex justify-between items-center pb-4 border-b border-orange-200">
                                             <span class="text-gray-600">Duration</span>
                                             <span class="font-medium">
                                                  <%= tour.duration %> Days
                                             </span>
                                        </div>
                                        <div class="flex justify-between items-center pb-4 border-b border-orange-200">
                                             <span class="text-gray-600">Max Group Size</span>
                                             <span class="font-medium">
                                                  <%= tour.groupSize %> People
                                             </span>
                                        </div>
                                        <div class="flex justify-between items-center pb-4 border-b border-orange-200">
                                             <span class="text-gray-600">Tour Guide</span>
                                             <span class="font-medium">Professional Guide</span>
                                        </div>
                                        <div class="flex justify-between items-center">
                                             <span class="text-gray-600">Accommodation</span>
                                             <span class="font-medium">
                                                  <%= tour.accommodation %>
                                             </span>
                                        </div>
                                   </div>
                              </div>
                         </div>

                         <!-- Booking Form -->
                         <div class="lg:col-start-2" data-aos="fade-left">
                              <div class="bg-white rounded-2xl shadow-lg p-8">
                                   <h3 class="text-2xl font-bold mb-6">Book This Tour</h3>
                                   <form action="/tours/<%= tour.slug %>/book" method="POST" class="space-y-6">
                                        <div class="grid md:grid-cols-2 gap-6">
                                             <div>
                                                  <label class="block text-gray-700 mb-2 font-medium">First Name</label>
                                                  <input type="text" name="firstName" value="mohamed " required class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-orange-500 focus:ring-2 focus:ring-orange-500/20 transition">
                                             </div>
                                             <div>
                                                  <label class="block text-gray-700 mb-2 font-medium">Last Name</label>
                                                  <input type="text" name="lastName" value="bella" required class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-orange-500 focus:ring-2 focus:ring-orange-500/20 transition">
                                             </div>
                                        </div>


                                        <div>
                                             <label class="block text-gray-700 mb-2 font-medium">Email Address</label>
                                             <input type="email" name="email" required value="mohamedbella235@gmail.com" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-orange-500 focus:ring-2 focus:ring-orange-500/20 transition">
                                        </div>

                                        <div class="grid md:grid-cols-2 gap-6">
                                             <div>
                                                  <label class="block text-gray-700 mb-2 font-medium">Tour Date</label>
                                                  <input type="date" name="date" required class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-orange-500 focus:ring-2 focus:ring-orange-500/20 transition">
                                             </div>
                                             <div>
                                                  <label class="block text-gray-700 mb-2 font-medium">Number of People</label>
                                                  <select value="1" name="groupSize" required class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-orange-500 focus:ring-2 focus:ring-orange-500/20 transition">
                                                       <% for(let i=1; i <=tour.groupSize; i++) { %>

                                                            <option value="<%= i %>">
                                                                 <%= i %>
                                                                      <%= i===1 ? 'Person' : 'People' %>
                                                            </option>
                                                            <% } %>
                                                  </select>
                                             </div>
                                        </div>

                                        <div>
                                             <label class="block text-gray-700 mb-2 font-medium">Special Requests</label>
                                             <textarea name="specialRequests" rows="4" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-orange-500 focus:ring-2 focus:ring-orange-500/20 transition"></textarea>
                                        </div>

                                        <button type="submit" class="w-full bg-gradient-to-r from-orange-600 to-orange-500 text-white py-4 rounded-lg font-medium hover:from-orange-700 hover:to-orange-600 transition-all transform hover:scale-[1.02]">
                                             Book Now
                                        </button>

                                        <p class="text-sm text-gray-500 text-center mt-4">
                                             By booking, you agree to our <a href="/terms" class="text-orange-500 hover:underline">Terms & Conditions</a>
                                        </p>
                                   </form>
                              </div>
                         </div>
                    </div>
               </div>
          </section>

          <!-- Floating Minimized Card (Desktop) -->
          <div class="fixed bottom-8 right-8 hidden lg:block z-50 booking-float" x-data="{ open: false }">
               <!-- Minimized Card -->
               <div x-show="!open" class="bg-white rounded-2xl shadow-lg p-6 cursor-pointer hover:shadow-xl transition-shadow" @click="open = true">
                    <div class="flex items-center justify-between gap-4">
                         <div>
                              <p class="font-bold text-gray-800">Interested in this tour?</p>
                              <p class="text-orange-600 font-bold">From $<%= tour.price %> per person</p>
                         </div>
                         <button class="bg-orange-500 text-white px-4 py-2 rounded-lg hover:bg-orange-600 transition-colors">
                              Book Now
                         </button>
                    </div>
               </div>

               <!-- Expanded Card -->
               <div x-show="open" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0 transform translate-y-2" x-transition:enter-end="opacity-100 transform translate-y-0" x-transition:leave="transition ease-in duration-200" x-transition:leave-start="opacity-100 transform translate-y-0" x-transition:leave-end="opacity-0 transform translate-y-2" class="bg-white rounded-2xl shadow-xl w-96">
                    <div class="p-6">
                         <div class="flex justify-between items-center mb-4">
                              <h4 class="text-xl font-bold">Quick Booking</h4>
                              <button @click="open = false" class="text-gray-400 hover:text-gray-600" aria-label="Close booking form">
                                   <i class="fas fa-times" aria-hidden="true"></i>
                              </button>
                         </div>
                         <div class="space-y-4">
                              <p class="text-gray-600">Book this amazing tour now and start your adventure!</p>
                              <div class="flex items-center justify-between border-y border-gray-100 py-4">
                                   <span class="text-gray-600">Price per person</span>
                                   <span class="text-xl font-bold text-orange-600">$<%= tour.price %></span>
                              </div>
                              <a href="#booking-section" @click="open = false" class="block w-full bg-gradient-to-r from-orange-600 to-orange-500 text-white text-center py-3 rounded-lg hover:from-orange-700 hover:to-orange-600 transition-colors">
                                   Proceed to Booking
                              </a>
                         </div>
                    </div>
               </div>
          </div>

          <!-- Floating Button (Mobile) -->
          <div class="fixed bottom-6 inset-x-4 lg:hidden z-50">
               <a href="#booking-section" class="block w-full text-center bg-gradient-to-r from-orange-600 to-orange-500 text-white 
                        text-lg font-medium py-3.5 rounded-full shadow-xl 
                        hover:shadow-2xl hover:from-orange-700 hover:to-orange-600
                        active:scale-95 
                        transition-all duration-300 ease-out">
                    <i class="fas fa-calendar-check mr-2" aria-hidden="true"></i>
                    Book This Tour
               </a>
          </div>

          <!-- Add this script for smooth scrolling -->
          <script>
               document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                    anchor.addEventListener('click', function (e) {
                         e.preventDefault();
                         const target = document.querySelector(this.getAttribute('href'));
                         const headerOffset = 100;
                         const elementPosition = target.getBoundingClientRect().top;
                         const offsetPosition = elementPosition + window.pageYOffset - headerOffset;

                         window.scrollTo({
                              top: offsetPosition,
                              behavior: 'smooth'
                         });
                    });
               });

               // Hide/Show floating elements based on scroll position
               let lastScroll = 0;
               const floatingElements = document.querySelectorAll('.booking-float');

               window.addEventListener('scroll', () => {
                    const currentScroll = window.pageYOffset;
                    const bookingSection = document.getElementById('booking-section');
                    const bookingSectionTop = bookingSection.offsetTop;
                    const bookingSectionBottom = bookingSectionTop + bookingSection.offsetHeight;

                    floatingElements.forEach(element => {
                         if (currentScroll < bookingSectionTop - window.innerHeight ||
                              currentScroll > bookingSectionBottom - 200) {
                              element.style.opacity = '1';
                              element.style.transform = 'translateY(0)';
                         } else {
                              element.style.opacity = '0';
                              element.style.transform = 'translateY(20px)';
                         }
                    });

                    lastScroll = currentScroll;
               });
          </script>

          <style>
               /* Smooth transitions for floating elements */
               .booking-float {
                    transition: opacity 0.3s ease, transform 0.3s ease;
               }

               /* Ensure smooth scrolling */
               html {
                    scroll-behavior: smooth;
                    scroll-padding-top: 100px;
               }
          </style>

          <%- include('../partials/footer') %>

               <!-- Font Awesome -->
               <script src="https://kit.fontawesome.com/your-kit-code.js" crossorigin="anonymous"></script>

               <!-- AOS Init -->
               <script>
                    AOS.init({
                         duration: 800,
                         once: true,
                         offset: 100
                    });
               </script>
</body>

</html>