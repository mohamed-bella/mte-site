<!DOCTYPE html>
<html lang="en">

<head>
     <%- include('../partials/head', { title: 'About Us - Morocco Tours | Your Trusted Travel Partner Since 2010' }) %>
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
     <script src="https://cdnjs.cloudflare.com/ajax/libs/lozad.js/1.16.0/lozad.min.js"></script>
     <!-- <link rel="stylesheet" href="https://unpkg.com/progressive-image.js/dist/progressive-image.css"> -->
     <!-- <script src="https://unpkg.com/progressive-image.js/dist/progressive-image.js"></script> -->
</head>

<body class="bg-gray-50">
     <%- include('../partials/header') %>

     <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
          <!-- Hero Section -->
          <div class="text-center mb-20">
               <h1 class="text-5xl font-light text-gray-900 mb-4">About Morocco Tours</h1>
               <p class="text-xl text-gray-600 font-light">Your Gateway to Authentic Moroccan Experiences</p>
          </div>

          <!-- CEO Section f-->
          <div class="bg-white rounded-xl shadow-sm p-12 mb-20 hover:shadow-md transition duration-300">
               <div class="flex flex-col md:flex-row items-center gap-12">
                    <div class="w-full md:w-1/4">
                         <div class="progressive">     
                              <img class=" lozad rounded-full w-48 h-48 object-cover mx-auto ring-4 ring-gray-100"
                                   data-src="https://raw.githubusercontent.com/mohamed-bella/mte-files/refs/heads/main/about/4.jpg"
                                   src="https://raw.githubusercontent.com/mohamed-bella/mte-files/refs/heads/main/about/4.jpg"

                                   alt="Hamid EL maimouni  - CEO"
                                   data-placeholder-background="#f3f4f6">
                         </div>
                    </div>
                    <div class="w-full md:w-3/4">
                         <h2 class="text-3xl font-light mb-3">Hamid EL maimouni</h2>
                         <p class="text-gray-600 mb-4 text-sm uppercase tracking-wider">Founder & CEO</p>
                         <p class="text-gray-800 mb-8 leading-relaxed">

                              With over +10 years of experience in Moroccan tourism, Hamid founded Morocco Tours with a vision to share the authentic beauty and culture of his homeland. His deep connection to local communities and extensive knowledge of Morocco's hidden gems has shaped our company's commitment to authentic, responsible tourism.
                         </p>
                         <div class="grid grid-cols-2 gap-4">
                              <a href="mailto:contact@moroccotravelexperts.com" class="flex items-center text-gray-600 hover:text-blue-600 transition">
                                   <i class="far fa-envelope text-xl mr-2"></i>
                                   <span class="text-sm">Email</span>
                              </a>

                              <a href="tel:+212-526-555512" class="flex items-center text-gray-600 hover:text-green-600 transition">
                                   <i class="fas fa-phone text-xl mr-2"></i>
                                   <span class="text-sm">Call</span>
                              </a>
                              <a href="https://wa.me/+212-526-555512" target="_blank" class="flex items-center text-gray-600 hover:text-green-500 transition">
                                   <i class="fab fa-whatsapp text-xl mr-2"></i>
                                   <span class="text-sm">WhatsApp</span>
                              </a>
                              <a href="https://instagram.com/el_maimouni_97" target="_blank" class="flex items-center text-gray-600 hover:text-pink-600 transition">
                                   <i class="fab fa-instagram text-xl mr-2"></i>
                                   <span class="text-sm">Instagram</span>
                              </a>

                         </div>
                    </div>
               </div>
          </div>

          <!-- Gallery Section -->
          <div class="mb-16">
               <h2 class="text-3xl font-light text-center mb-12">Our Gallery</h2>
               <div class="columns-1 md:columns-3 gap-4 space-y-4" id="gallery">
                    <% if (typeof galleryImages !== 'undefined' && galleryImages.length > 0) { %>
                         <% galleryImages.forEach(image => { %>
                              <div class="break-inside-avoid">
                                   <div class="relative group cursor-pointer rounded-lg overflow-hidden" onclick="openModal(this)">
                                        <div class="progressive">
                                             <img class=" lozad w-full object-cover transition duration-300 group-hover:scale-105"
                                                  data-src="<%= image %>"
                                                  src="<%= image %>"
                                                  alt="Morocco Travel Scene"
                                                  data-placeholder-background="#f3f4f6">
                                             <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300 flex items-center justify-center">
                                                  <i class="fas fa-expand text-white opacity-0 group-hover:opacity-100 transform scale-0 group-hover:scale-100 transition-all duration-300"></i>
                                             </div>
                                        </div>
                                   </div>
                              </div>
                         <% }); %>
                    <% } %>
               </div>
          </div>
     </main>

     <!-- Modal -->
     <div id="imageModal" class="fixed inset-0 bg-black bg-opacity-90 hidden z-50 flex items-center justify-center p-4">
          <div class="relative w-full h-full flex items-center justify-center">
               <div class="absolute top-4 right-4 flex space-x-4 z-10">
                    <a href="#" id="downloadBtn" class="bg-white bg-opacity-10 hover:bg-opacity-20 rounded-full p-3 transition" download>
                         <i class="fas fa-download text-2xl text-white"></i>
                    </a>
                    <button onclick="closeModal()" class="bg-white bg-opacity-10 hover:bg-opacity-20 rounded-full p-3 transition">
                         <i class="fas fa-times text-2xl text-white"></i>
                    </button>
               </div>
               <div class="max-h-[90vh] max-w-[90vw] relative">
                    <img id="modalImage" src="" alt="Full size image" class="max-h-[90vh] max-w-[90vw] object-contain rounded-lg">
               </div>
          </div>
     </div>

     <%- include('../partials/footer') %>

     <script>
       

          // Modal functionality
          function openModal(imgContainer) {
               const modal = document.getElementById('imageModal');
               const modalImg = document.getElementById('modalImage');
               const downloadBtn = document.getElementById('downloadBtn');
               const img = imgContainer.querySelector('img');
     
               modalImg.src = img.dataset.src;
               downloadBtn.href = img.dataset.src;
               modal.classList.remove('hidden');
               document.body.style.overflow = 'hidden';
          }

          function closeModal() {
               const modal = document.getElementById('imageModal');
               modal.classList.add('hidden');
               document.body.style.overflow = 'auto';
          }

          // Close modal on escape key
          document.addEventListener('keydown', function(e) {
               if (e.key === 'Escape') closeModal();
          });
     </script>

     <style>
         

          #gallery {
               column-gap: 1rem;
          }

          .break-inside-avoid {
               break-inside: avoid;
          }
     </style>
</body>
</html>
